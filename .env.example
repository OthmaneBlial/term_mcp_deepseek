# DeepSeek API Configuration
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_MODEL=deepseek-chat

# Server Configuration
HOST=127.0.0.1
PORT=5000
DEBUG=false

# OAuth2 Configuration
OAUTH_CLIENT_ID=mcp_client
OAUTH_CLIENT_SECRET=mcp_secret

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/term_mcp_deepseek.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Session Management
SESSION_TIMEOUT=3600
MAX_CONCURRENT_SESSIONS=10

# Security Configuration
SECRET_KEY=your_secret_key_here
MAX_COMMAND_LENGTH=1000

# Optional: Redis Configuration (uncomment if using Redis for sessions)
# REDIS_URL=redis://localhost:6379/0

# Optional: Database Configuration (uncomment if using database)
# DATABASE_URL=sqlite:///mcp_server.db

# Optional: Monitoring Configuration
# SENTRY_DSN=your_sentry_dsn_here
# PROMETHEUS_PORT=9090